<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-6">
        <div class="cocktail-card">
          <%= link_to cocktail_path(cocktail) do %>
          <div>
            <p><%= cocktail.name %></p>
          </div>
          <% end %>
          <%= link_to 'supprimer', cocktail_path(cocktail), method: :delete, class: 'btn btn-danger' %>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Vous voulez ajouter un cocktail ?", new_cocktail_path, class: 'btn btn-primary' %>
</div>
